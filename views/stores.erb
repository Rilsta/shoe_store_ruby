<div class="jumbotron">
<h1>Shoe Store List</h1>
<h2>Naked beneath the ankles? Look no further.</h2>
<h3>Devoted to curing shoelessness since 1806.</h3>
</div>

<div class="container-fluid">
  <h3>List of Stores:</h3>
  <ul class="list-unstyled">
    <% @stores.each do |store| %>
    <li>
      <a href="/stores/<%= store.id %>"><button class="btn btn-default btn-lg"><%= store.store_name %></button></a>
      <a href="/stores/<%= store.id %>/edit"><button class="btn btn-default btn-xs">Edit</button></a>
      <form action="/stores/<%= store.id %>/delete" method="post">
        <div class="form-group">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-default btn-xs">Remove</button>
        </div>
      </form>
    </li>
    <% end %>
  </ul>
</div>
