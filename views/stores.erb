<h1>Store List</h1>
<a href="/">Home</a>

<ul>
  <% @stores.each do |store| %>
  <li>
    <a href="/stores/<%= store.id %>"><h3><%= store.store_name %></h3></a>
    <a href="/stores/<%= store.id %>/edit"><button>Edit</button></a>
    <form action="/stores/<%= store.id %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" name="button">Remove</button>
    </form>
  </li>
  <% end %>
</ul>

<a href="/stores/new">Add a New Store</a>
