<div class="jumbotron">
<h2>Edit Store Name</h2>
</div>

<div class="container-fluid">
<form class="form-inline" action="/stores/<%= @store.id %>" method="post">
  <input name="_method" type="hidden"  value="patch">
  <label>Type here:</label>
  <input class='form-control' type="text" name="store_name" id="store_name" value="<%= @store.store_name %>">
  <button class="btn btn-default" type="submit" name="button">Save Changes</button>
</form>
</div>
